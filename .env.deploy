# OpenMeet - Deployment Configuration
# Ports 4000-4500 to avoid conflicts with existing services

# Application Environment
NODE_ENV=development

# Database Configuration (PostgreSQL on port 4001)
DATABASE_URL=postgresql://openmeet:openmeet123@localhost:4001/openmeet_db
POSTGRES_USER=openmeet
POSTGRES_PASSWORD=openmeet123
POSTGRES_DB=openmeet_db

# Redis Configuration (Redis on port 4002)
REDIS_HOST=localhost
REDIS_PORT=4002
REDIS_PASSWORD=openmeet123
REDIS_URL=redis://:openmeet123@localhost:4002

# API Keys and Secrets
JWT_SECRET=dev-secret-change-in-production-min-32-chars-required
JWT_REFRESH_SECRET=dev-refresh-secret-different-from-jwt-secret
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef

# Service Ports
PORT=4100
WEB_PORT=4200

# URLs for services
NEXT_PUBLIC_API_URL=http://localhost:4100/api
NEXT_PUBLIC_WS_URL=ws://localhost:4100
WEB_URL=http://localhost:4200

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:4100,http://localhost:3000,http://localhost:3003

# AI Provider Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=sk-dummy-key-for-dev
