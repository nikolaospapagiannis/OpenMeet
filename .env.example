# Application Environment
NODE_ENV=development
PYTHON_ENV=development

# ⚠️ SECURITY WARNING ⚠️
# This is an EXAMPLE configuration file. DO NOT use these values in production!
# All passwords, secrets, and API keys MUST be changed before deployment.
# Use strong, randomly generated secrets for production environments.

# Database Configuration
POSTGRES_USER=openmeet
POSTGRES_PASSWORD=openmeet123
POSTGRES_DB=openmeet_db
DATABASE_URL=postgresql://openmeet:openmeet123@localhost:5432/openmeet_db

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@localhost:6379

# MongoDB Configuration - REMOVED
# Now using PostgreSQL with pgvector extension for all data storage including vector embeddings
# Transcripts and documents are stored in PostgreSQL with full-text search and vector similarity

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# RabbitMQ Configuration
RABBITMQ_USER=openmeet
RABBITMQ_PASSWORD=rabbit123
RABBITMQ_URL=amqp://openmeet:rabbit123@localhost:5672

# MinIO S3 Storage Configuration
MINIO_USER=openmeet
MINIO_PASSWORD=minio123456
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=openmeet
S3_SECRET_KEY=minio123456
S3_BUCKET=openmeet-storage

# API Keys and Secrets
# ⚠️ SECURITY CRITICAL: JWT_SECRET and JWT_REFRESH_SECRET MUST be changed in production!
# Generate secure secrets using: openssl rand -base64 32
# Minimum length: 32 characters
# NEVER commit actual secrets to version control!
JWT_SECRET=REPLACE_WITH_SECURE_SECRET_MIN_32_CHARS
JWT_REFRESH_SECRET=REPLACE_WITH_DIFFERENT_SECURE_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Key (AES-256)
# ⚠️ REQUIRED for production: Generate using: openssl rand -hex 32
# Must be exactly 32 characters (256 bits)
ENCRYPTION_KEY=REPLACE_WITH_32_CHARACTER_HEX_KEY

# OAuth Configuration
# ⚠️ Register your application with each provider to get real credentials
GOOGLE_CLIENT_ID=REPLACE_WITH_GOOGLE_OAUTH_CLIENT_ID
GOOGLE_CLIENT_SECRET=REPLACE_WITH_GOOGLE_OAUTH_CLIENT_SECRET
MICROSOFT_CLIENT_ID=REPLACE_WITH_MICROSOFT_OAUTH_CLIENT_ID
MICROSOFT_CLIENT_SECRET=REPLACE_WITH_MICROSOFT_OAUTH_CLIENT_SECRET
GITHUB_CLIENT_ID=REPLACE_WITH_GITHUB_OAUTH_CLIENT_ID
GITHUB_CLIENT_SECRET=REPLACE_WITH_GITHUB_OAUTH_CLIENT_SECRET

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION=your-openai-org-id
WHISPER_MODEL=base
GPT_MODEL=gpt-4-turbo-preview

# Stripe Payment Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
# Client-side Stripe key (Next.js public variable)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@openmeet.ai
SUPPORT_EMAIL=support@openmeet.ai

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Video Conferencing Integrations
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
TEAMS_CLIENT_ID=your-teams-client-id
TEAMS_CLIENT_SECRET=your-teams-client-secret

# CRM Integrations
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
HUBSPOT_API_KEY=your-hubspot-api-key

# Application URLs
API_URL=http://localhost:4000
WEB_URL=http://localhost:3000
WS_URL=ws://localhost:5000
AI_SERVICE_URL=http://localhost:5001
TRANSCRIPTION_SERVICE_URL=http://localhost:5002

# Public URLs (for production)
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_WS_URL=ws://localhost:5000
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=2147483648
MAX_AUDIO_DURATION_MINUTES=240

# Feature Flags
ENABLE_VIDEO_RECORDING=true
ENABLE_REAL_TIME_TRANSCRIPTION=true
ENABLE_AI_SUMMARIES=true
ENABLE_TEAM_FEATURES=true
ENABLE_ENTERPRISE_SSO=false

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key
GOOGLE_ANALYTICS_ID=your-ga-id

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:4000
HELMET_CSP_DIRECTIVES=default-src 'self'
ENCRYPTION_KEY=your-encryption-key-32-characters

# Compliance
GDPR_ENABLED=true
HIPAA_ENABLED=false
SOC2_ENABLED=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_DIR=./logs
