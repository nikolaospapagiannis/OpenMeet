{
  "dashboard": {
    "title": "Load Testing & Performance Dashboard",
    "tags": ["load-testing", "performance", "api"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (RPS)",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Response Time Percentiles",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "ms", "label": "Response Time" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [200],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["B", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "name": "High P95 Response Time"
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 8, "h": 6 },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "Error Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percent", "max": 5, "label": "Error %" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "x": 8, "y": 8, "w": 8, "h": 6 },
        "targets": [
          {
            "expr": "http_active_connections",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "websocket_active_connections",
            "legendFormat": "WebSocket",
            "refId": "B"
          }
        ]
      },
      {
        "id": 5,
        "title": "Database Query Performance",
        "type": "graph",
        "gridPos": { "x": 16, "y": 8, "w": 8, "h": 6 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_ms_bucket[5m]))",
            "legendFormat": "p95 Query Time",
            "refId": "A"
          },
          {
            "expr": "rate(db_queries_total[1m])",
            "legendFormat": "Queries/sec",
            "refId": "B"
          }
        ]
      },
      {
        "id": 6,
        "title": "Cache Hit Rate",
        "type": "stat",
        "gridPos": { "x": 0, "y": 14, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m]) / (rate(cache_hits_total[5m]) + rate(cache_misses_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 70, "color": "yellow" },
                { "value": 90, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": { "x": 6, "y": 14, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU %",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": { "x": 12, "y": 14, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory MB",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Request Duration by Endpoint",
        "type": "heatmap",
        "gridPos": { "x": 18, "y": 14, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(http_request_duration_ms_bucket[5m])",
            "legendFormat": "{{path}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "PostgreSQL Connections",
        "type": "stat",
        "gridPos": { "x": 0, "y": 18, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"openmeet\"}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "title": "Redis Operations/sec",
        "type": "graph",
        "gridPos": { "x": 6, "y": 18, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total[1m])",
            "legendFormat": "Commands/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 12,
        "title": "Elasticsearch Query Time",
        "type": "graph",
        "gridPos": { "x": 12, "y": 18, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "elasticsearch_indices_search_query_time_seconds",
            "legendFormat": "Query Time",
            "refId": "A"
          }
        ]
      },
      {
        "id": 13,
        "title": "Load Test Summary",
        "type": "table",
        "gridPos": { "x": 18, "y": 18, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "http_requests_total",
            "refId": "A",
            "format": "table"
          }
        ]
      }
    ]
  }
}
