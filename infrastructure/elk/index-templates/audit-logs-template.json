{
  "index_patterns": ["logs-audit-*"],
  "template": {
    "settings": {
      "number_of_shards": 2,
      "number_of_replicas": 2,
      "index.lifecycle.name": "audit-logs-ilm-policy",
      "index.lifecycle.rollover_alias": "logs-audit",
      "refresh_interval": "5s",
      "codec": "best_compression",
      "max_result_window": 50000
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date",
          "format": "strict_date_optional_time||epoch_millis"
        },
        "correlation_id": {
          "type": "keyword"
        },
        "log_type": {
          "type": "keyword"
        },
        "audit_action": {
          "type": "keyword"
        },
        "audit_user": {
          "type": "keyword"
        },
        "audit_user_email": {
          "type": "keyword"
        },
        "audit_resource": {
          "type": "keyword"
        },
        "audit_resource_id": {
          "type": "keyword"
        },
        "status": {
          "type": "keyword"
        },
        "user": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "email": {
              "type": "keyword"
            },
            "role": {
              "type": "keyword"
            }
          }
        },
        "resource": {
          "properties": {
            "type": {
              "type": "keyword"
            },
            "id": {
              "type": "keyword"
            }
          }
        },
        "metadata": {
          "type": "object",
          "enabled": true
        },
        "ip_address": {
          "type": "ip"
        },
        "session_id": {
          "type": "keyword"
        }
      }
    }
  },
  "priority": 200,
  "version": 1,
  "_meta": {
    "description": "Template for audit logs - compliance and security tracking"
  }
}
