# AI Service Environment Variables

# Application
ENV=production
PORT=8000
DEBUG=false

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_WHISPER_MODEL=whisper-1

# Anthropic API (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# CORS
CORS_ORIGINS=https://openmeet.com,https://api.openmeet.com

# Redis
REDIS_URL=redis://redis:6379

# PostgreSQL (for metadata and AI results)
# MongoDB has been removed - all data now stored in PostgreSQL with pgvector
DATABASE_URL=postgresql://user:password@postgres:5432/openmeet

# Logging
LOG_LEVEL=INFO

# Metrics
PROMETHEUS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Model Settings
MAX_TOKENS=4000
TEMPERATURE=0.7
TOP_P=0.9

# File Storage
S3_BUCKET=openmeet-storage
AWS_REGION=us-east-1
