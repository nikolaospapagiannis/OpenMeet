{
  "onlyScanRoots": [
    "packages/core/src",
    "packages/desktop/src",
    "packages/ml-services/src"
  ],
  "skipPaths": [
    "node_modules",
    "dist",
    "build",
    ".git",
    "coverage",
    "venv",
    "__pycache__",
    ".validation",
    "models",
    "data",
    "generated",
    "Lib/site-packages",
    "examples",
    "scripts",
    "test-api-auth-middleware.js",
    "test-circuit-breaker.js",
    "test-kms-manager.js",
    "test-oauth-redis-manual.js",
    "test-oauth-redis.ts",
    "test-odoo-auth.js",
    "test-real-observability.js",
    "test-odoo-sandbox.js",
    "test-sap-integration.js",
    "comprehensive-violation-fix.js",
    "fix-test-helpers.js",
    "fix-fraud-violations.py",
    "fix-retraining.py",
    "fix-observability-violations.py",
    "fix-violations-v2.py",
    "fix-test-traffic-method.py"
  ],
  "skipPatterns": [
    "\.test\.",
    "\.spec\.",
    "\.d\.ts$",
    "node_modules",
    "/generated/",
    "/venv/",
    "bundle\.js$",
    "\.min\.js$",
    "/test-.*\\.js$",
    "/test-.*\\.ts$",
    "-test\\.js$",
    "-test\\.ts$",
    "/fix-.*\\.js$",
    "comprehensive-violation-fix\\.js",
    "/run-.*\\.js$",
    "/verify-.*\\.js$",
    "/examples/",
    "/scripts/",
    "\\btest-[a-z0-9-]+\\.js$",
    "\\btest-[a-z0-9-]+\\.ts$",
    "\\bfix-[a-z0-9-]+\\.js$"
  ]
}
